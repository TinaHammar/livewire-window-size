{
    "name": "tanthammar/livewire-window-size",
    "description": "Laravel blade directives and php helpers for serverside rendered content, based on browser window size WITHOUT css. Requires Livewire and AlpineJS\n",
    "type": "package",
    "license": "MIT",
    "keywords": [
        "laravel",
        "livewire",
        "alpine",
        "breakpoints"
    ],
    "authors": [
        {
            "name": "Tina Hammar",
            "email": "tinahammar@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0|^8.1|^8.2",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "livewire/livewire": "^2.4.4"
    },
    "autoload": {
        "psr-4": {
            "Tanthammar\\LivewireWindowSize\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tanthammar\\LivewireWindowSize\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tanthammar\\LivewireWindowSize\\LivewireWindowSizeServiceProvider"
            ]
        }
    },
    "require-dev": {
        "orchestra/testbench": "^6.0"
    }
}
